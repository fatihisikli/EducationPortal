@model EP.UI.Dtos.UserIdentityDtos.LoginDto
@{
    Layout = null;
}
<h1>@ViewData["Title"]</h1>

<p>Bu Kullanici Giris Sayfasıdır.</p>
<div class="row">
    <div class="col-md-4">
        <section>
            <form method="post">

                <div class="row mb-3">
                    <lavel class="col-sm-4 col-form-label">Username</lavel>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="Username" type="text">
                    </div>
                </div>
                <div class="row mb-3">
                    <lavel class="col-sm-4 col-form-label">Şifre</lavel>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="Password" type="password">
                    </div>
                </div>

                <button>
                    <span>Giris Yap</span>
                </button>
            </form>

        </section>

    </div>
</div>
